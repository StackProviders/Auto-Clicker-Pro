{
    "manifest_version": 3,
    "name": "Auto Clicker Pro",
    "version": "3.1",
    "description": "An advanced auto clicker to automate click sequences with professional features.",
    "permissions": ["contextMenus", "scripting", "activeTab", "storage", "clipboardWrite"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
